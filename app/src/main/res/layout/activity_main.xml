<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIBSS SDK Test Actions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- Key Download -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKeyDownload"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Key Download"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Parameter Download -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardParamDownload"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Parameter Download"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Purchase -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTestPurchase"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Test Purchase"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Purchase Cashback -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTestPurchaseCashback"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Test Purchase Cashback"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Refund -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTestRefund"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Test Refund"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Balance Enquiry -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTestBalance"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Test Balance Enquiry"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Cash Advance -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTestCashAdvance"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Test Cash Advance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Pre-auth -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTestPreAuth"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Test Pre-auth"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Sales Completion -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTestSalesCompletion"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Test Sales Completion"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
